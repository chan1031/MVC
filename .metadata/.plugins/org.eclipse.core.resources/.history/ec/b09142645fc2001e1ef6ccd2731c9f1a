
$(document).ready(function () {

    
	$('#submit2').on('click', function () {
		var userId = $("#userId").val();
	    var userPw = $("#userPw").val();

	    var loginRequest = {
	    		userId: userId,
	    		userPw: userPw
	    };
		// jQuerry와 AJAX, 요청은 POST 방식이고 응답은 JSON
		alert('code open');
        $.ajax({
            url: '/login',
            type: 'post',
            data: JSON.stringify(loginRequest),
            datatype: "json",
            success: function (data) {
            	alert('success');
            },
        	error: function(error) {
                alert("Login failed");
            }
        });

		
	}); 
	


}); 
